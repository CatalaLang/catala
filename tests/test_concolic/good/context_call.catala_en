let scope B (B_in: B_in {x_in: integer}): B {o: integer} =
  let get x : integer = B_in.x_in in
  let set a : A {x: integer; o: integer} =
    let result : A =
      A { A_in x_in = λ () → ⟨ ⟨true ⊢ ⟨x⟩⟩ | false ⊢ ∅ ⟩; }
