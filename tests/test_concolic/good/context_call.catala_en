let scope A
  (A_in: A_in {x_in: unit → ⟨integer⟩})
  : A {x: integer; o: integer}
  =
  let get x : unit → ⟨integer⟩ = A_in.x_in in
  let set x : integer =
    error_empty
      ⟨ x () | true ⊢ ⟨error_empty ⟨ ⟨true ⊢ ⟨30⟩⟩ | false ⊢ ∅ ⟩⟩ ⟩
  in
  let set o : integer =
    error_empty
      ⟨ ⟨ ⟨x < 0 ⊢ ⟨2⟩⟩, ⟨x = 30 ⊢ ⟨3⟩⟩ | false ⊢ ∅ ⟩
      | true ⊢ ⟨ ⟨true ⊢ ⟨1⟩⟩ | false ⊢ ∅ ⟩ ⟩
  in
  return { A x = x; o = o; }
